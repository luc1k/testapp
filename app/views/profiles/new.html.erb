<h1>New profile</h1>

<% form_for(@profile) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :accepted %><br />
    <%= f.text_field :accepted %>
  </p>
  <p>
    <%= f.label :wrong_answer %><br />
    <%= f.text_field :wrong_answer %>
  </p>
  <p>
    <%= f.label :timelimit %><br />
    <%= f.text_field :timelimit %>
  </p>
  <p>
    <%= f.label :memorylimit %><br />
    <%= f.text_field :memorylimit %>
  </p>
  <p>
    <%= f.label :score %><br />
    <%= f.text_field :score %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', profiles_path %>